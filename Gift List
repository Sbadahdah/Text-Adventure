#This program will act as a holiday gift list, keeping you in your specified budget 
#as you add items to your list

import sys

#this is the main fuction 
def main(gift_list,budget):
  
  while True:
    print('1.Add a gift: ')
    print('2.Remove a gift: ')
    print('3.Print current list: ')
    print('4.Quit')
    
    choice = input('Which would you like to select: ')
    if choice == '1':
      return add_gift(gift_list,budget)
    elif choice == '2':
      return remove_gift(gift_list,budget)
    elif choice == '3':
      return print_list(gift_list,budget)
    elif choice == '4':
      return quit(gift_list,budget)
    else:
      print('Unknown input.')

#this function will quit the program and print a list
def quit(gift_list,budget):
  print(*gift_list, sep="\n")
  sys.exit()

#function that adds a new gift
def add_gift(gift_list,budget):
  item = input('Name of gift: ')
  gift_list = gift_list + [item]
  price = float(input('Price of gift: '))
  if price > budget:
    print('Sorry, that item seems to exceed your budget.')
    return main(gift_list,budget)
  elif price <= budget:
    budget -= price
    print("Remaining budget:",'$', +budget)
    return main(gift_list,budget)
  else:
    print('Input unknown')
  
#function to print the gift list
def print_list(gift_list,budget):
  print(*gift_list, sep="\n")
  return main(gift_list,budget)

#function that adds item and money back
def remove_gift(gift_list,budget):
  item = input('Item to remove: ')
  price = float(input('Price of Item: '))
  
  if item in gift_list:
    gift_list.remove(item)
    budget += price
    print("Remaining budget:",'$', +budget)
    return main(gift_list,budget)
  elif item not in gift_list:
    print('That item does not seem to be on your list')
    return main(gift_list,budget)
  else:
    print('Input unknown')
    
  
def start():
#setting a budget
  budget = float(input('Enter gift budget: '))
#creating a gift list
  gift_list = []
  main(gift_list,budget)

start()
